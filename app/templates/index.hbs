<div class="app-index container-fluid" ondrop={{action "drop"}}>

  <div class="row message">
    <div class="text col-sm-6">
      <h1 class="slogan text-center">Normalize your .bib</h1>
      <div class="features row">
        <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Remove unnecessary fields</div>
        <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Get warnings on missing fields</div>
        <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Check formatting</div>
        <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Auto-formatting basic fields</div>
      </div>
    </div>

    <div class="drop col-sm-6">
      <div class="open-file text-center">
        <div class="btn btn-primary" onclick={{action "choose"}}>Choose a bibtex file</div>
      </div>
      <div class="separator text-center">
        <span>-- or --</span>
      </div>
      <div class="drop-file text-center">
        <div class="drop-file-area" onclick={{action "choose"}}><b>Drag your file here</b></div>
        {{input type="file" name="file" class="file-input hidden" multiple="false" accept=".bib" change=(action 'select') }}
      </div>
    </div>
  </div>

  <div class="scroll text-center">
    <div class="text"><i class="fa fa-angle-double-down" aria-hidden="true"></i> See an example <i class="fa fa-angle-double-down" aria-hidden="true"></i></div>
  </div>

  <div class="row example">
    <div class="col-xs-12">
      <h3><strong>Original Bibtex</strong></h3>
      <textarea id="sample-entry" rows="11" class="col-xs-12">{{sampleEntry}}</textarea>
      <div class="options-right hidden-xs">
        {{#link-to "editor"}}<button type="button" class="btn btn-primary btn-sm" name="button" {{action "normalizeSample"}}><i class="fa fa-cog"></i>Normalize</button>{{/link-to}}
      </div>
    </div>

    <div class="col-xs-12">
        <h3><strong>Normalized Bibtex</strong></h3>
        <div class="bibtex-content">
          <pre class="brush: bibtex">{{normalizedSampleEntry}}</pre>
        </div>
    </div>
  </div>

  {{highlight-js code=file lang=language hasLineNumbers=hasLineNumbers}}

</div>
